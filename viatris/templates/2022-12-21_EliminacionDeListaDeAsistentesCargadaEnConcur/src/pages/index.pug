extend ../templates/base
block content

	-
		const BANNERS = [
			{
				bannerImg: 'https://mcusercontent.com/f8003344e5055720b1568282f/images/eb92dd34-54ac-c207-fbae-24e5f7ea6e66.png',
				bannerAlt: '',
				bannerUrl: '',
			},
			{
				bannerImg: 'https://mcusercontent.com/f8003344e5055720b1568282f/images/9a9efe59-067d-a192-6a9d-f64b6ffbfb17.png',
				bannerAlt: '',
				bannerUrl: 'mailto:speedster@viatris.com',
			},
			{
				bannerImg: 'https://mcusercontent.com/f8003344e5055720b1568282f/images/4b1453aa-974e-94c9-0436-552261980e7d.png',
				bannerAlt: '',
				bannerUrl: '',
			},
		]
	
	table(border="0" cellpadding="0" cellspacing="0" width=`${wrapWidth}` style="mso-table-lspace: 0; mso-table-rspace: 0;")
		each item in BANNERS
			tr
				td(style="font-size: 0.001px; line-height: 1; mso-line-height-alt: 1%;")
					if item.bannerUrl !== ''
						a(href=`${item.bannerUrl}` rel="noopener" target="_blank") 
							img(src=`${item.bannerImg}` alt="Viatris" width="700" style="width: 700px;")
					if item.bannerUrl == ''
						img(src=`${item.bannerImg}` alt="Viatris" width="700" style="width: 700px;")