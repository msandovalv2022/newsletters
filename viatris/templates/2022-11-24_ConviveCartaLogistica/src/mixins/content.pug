mixin heading(heading)
    table(border="0" cellpadding="0" cellspacing="0" width=`${wrapWidth}` style="mso-table-lspace: 0; mso-table-rspace: 0;")
        tr
            td(width="40")
            td(width="712")
                table(border="0" cellpadding="0" cellspacing="0" width="712" style="mso-table-lspace: 0; mso-table-rspace: 0;")
                    tr
                        td(align="center", style="font-family: arial, helvetica, sans-serif; line-height: 1.33; mso-line-height-alt: 133%;")
                            span(style=`color: ${textBody}; font-size: 33px;`) !{`${heading}`}
            td(width="40")

mixin sub_heading(subHeading)
    table(border="0" cellpadding="0" cellspacing="0" width=`${wrapWidth}` style="mso-table-lspace: 0; mso-table-rspace: 0;")
        tr
            td(width="40")
            td(width="712")
                table(border="0" cellpadding="0" cellspacing="0" width="712" style="mso-table-lspace: 0; mso-table-rspace: 0;")
                    tr
                        td(align="center", style="font-family: arial, helvetica, sans-serif; line-height: 1.33; mso-line-height-alt: 133%;")
                            strong(style=`color: ${textTitle}; font-size: 26px;`) !{`${subHeading}`}
            td(width="40")

mixin content(arrContent)
    - let arr = arrContent
    table(border="0" cellpadding="0" cellspacing="0" width=`${wrapWidth}` style="mso-table-lspace: 0; mso-table-rspace: 0;")
        tr
            td(width="40")
            td(width="712")
                table(border="0" cellpadding="0" cellspacing="0" width="712" style="mso-table-lspace: 0; mso-table-rspace: 0;")
                    each item in arr
                        tr
                            td(style="font-family: arial, helvetica, sans-serif; line-height: 1.33; mso-line-height-alt: 133%;")
                                span(style=`color: ${textBody}; font-size: 20px;`) !{`${item}`}
                        tr: td(height="24")
            td(width="40")

mixin img(imgHeader, imgHeaderWidth)
    table(border="0" cellpadding="0" cellspacing="0" width=`${wrapWidth}` style="mso-table-lspace: 0; mso-table-rspace: 0;")
        tr: td(align="center", sytle="font-size: 0.001px; line-height: 1; mso-line-height-rule: 1%;")
            img(src=`${imgHeader}`, width=`${imgHeaderWidth}` height="auto" style=`display: block; width: ${imgHeaderWidth}px; height: auto;`)