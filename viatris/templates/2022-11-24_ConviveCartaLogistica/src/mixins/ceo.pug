mixin ceo(imgCeoOne, textNameOne, textPositionOne)
    table(border="0" cellpadding="0" cellspacing="0" width=`${wrapWidth}` style="mso-table-lspace: 0; mso-table-rspace: 0;")
        tr
            td(width="40")
            td(valign="top")
                table(border="0" cellpadding="0" cellspacing="0" width="560" style="mso-table-lspace: 0; mso-table-rspace: 0;")
                    tr
                        td(align="center", width="200"): img(src=`${imgCeoOne}`)
                        td(width="16")
                        td(width="344", style="font-family: arial, helvetica, sans-serif; line-height: 1.33; mso-line-height-alt: 133%;")
                            strong(style=`color: ${textTitle}; font-size: 32px;`) !{`${textNameOne}`}<br>
                            span(style=`color: ${textBody}; font-size: 24px;`) !{`${textPositionOne}`}
            td(width="40")

