mixin separator
    table(border="0" cellpadding="0" cellspacing="0" width="712" style="mso-table-lspace: 0; mso-table-rspace: 0;")
        tr
            td(width="712")
                table(border="0" cellpadding="0" cellspacing="0" width="712", bgcolor="#f1f1f1", style="mso-table-lspace: 0; mso-table-rspace: 0;")
                    tr: td(height="2")

mixin margin_height(height)
    table(border="0" cellpadding="0" cellspacing="0" width=`${wrapWidth}` style="mso-table-lspace: 0; mso-table-rspace: 0;")
        tr: td(height=`${height}`)

mixin purple_separator
    table(border="0" cellpadding="0" cellspacing="0" width="712" style="mso-table-lspace: 0; mso-table-rspace: 0;")
        tr
            td(width="712")
                table(border="0" cellpadding="0" cellspacing="0" width="712", bgcolor="#6D3B9B", style="mso-table-lspace: 0; mso-table-rspace: 0;")
                    tr: td(height="2")