mixin team(arrTeam)
    - let arr = arrTeam
    if arr.heading
        table(border="0" cellpadding="0" cellspacing="0" width=`${wrapWidth}` style="mso-table-lspace: 0; mso-table-rspace: 0;")
            tr
                td(width="40")
                td(style="font-family: arial, helvetica, sans-serif; line-height: 1.333; mso-line-height-alt: 133%;")
                    strong(style=`color: ${textBody}; font-size: 26px;`) !{`${arr.heading}`}
                td(width="48")
        table(border="0" cellpadding="0" cellspacing="0" width=`${wrapWidth}` style="mso-table-lspace: 0; mso-table-rspace: 0;")
            tr: td(height="32")
    each item in arr
        table(border="0" cellpadding="0" cellspacing="0" width=`${wrapWidth}` style="mso-table-lspace: 0; mso-table-rspace: 0;")
            tr
                td(width="40")
                td(width="160", valign="top"): img(src=`${item.img}`)
                td(width="16")
                td(width="536")
                    table(border="0" cellpadding="0" cellspacing="0" width="536" style="mso-table-lspace: 0; mso-table-rspace: 0;")
                        tr
                            td(style="font-family: arial, helvetica, sans-serif; line-height: 1.333; mso-line-height-alt: 133%;")
                                span(style=`color: ${textTitle}; font-size: 26px;`) !{`${item.name}`}
                    if item.title
                        table(border="0" cellpadding="0" cellspacing="0" width="536" style="mso-table-lspace: 0; mso-table-rspace: 0;")
                            tr
                                td(style="font-family: arial, helvetica, sans-serif; line-height: 1.33; mso-line-height-alt: 133%;")
                                    span(style=`color: ${textBody}; font-size: 20px;`) !{`${item.title}`}
                    table(border="0" cellpadding="0" cellspacing="0" width="536" style="mso-table-lspace: 0; mso-table-rspace: 0;")
                        tr: td(height="8")
                    table(border="0" cellpadding="0" cellspacing="0" width="536" style="mso-table-lspace: 0; mso-table-rspace: 0;")
                        each text in item.text
                            tr
                                td(style="font-family: arial, helvetica, sans-serif; line-height: 1.414; mso-line-height-alt: 141.4%;")
                                    span(style=`color: ${textBody}; font-size: 16px;`) !{`${text}`}
                            tr: td(height="8")
                td(width="40")
        table(border="0" cellpadding="0" cellspacing="0" width=`${wrapWidth}` style="mso-table-lspace: 0; mso-table-rspace: 0;")
            tr: td(height="24")