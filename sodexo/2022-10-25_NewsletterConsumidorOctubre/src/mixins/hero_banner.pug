mixin HERO_BANNER(imgHero, imgHeroBannerAlt)
    table(border="0" cellpadding="0" cellspacing="0" width="100%" role="presentation" style="max-width: 600px; mso-table-lspace: 0; mso-table-rspace: 0;")
        tr
            td(style="font-size: 0.001px; line-height: 1; mso-line-height-alt: 1%;")
                img(src=`${pathImage}${imgHero}`, style="max-width: 600px; height: auto; display: block;", width="100%", height="auto", alt=`${imgHeroBannerAlt}`)

mixin HERO_BANNER_URL(imgHero, imgHeroBannerAlt, imgHeroBannerUrl)
    table(border="0", cellpadding="0", cellspacing="0", width="100%", role="presentation" style="max-width: 600px; mso-table-lspace: 0; mso-table-rspace: 0;")
        tr
            td(align="center" style="font-size: 0.001px; line-height: 1; mso-line-height-alt: 1%;")
                a(href=`${imgHeroBannerUrl}` rel="noopener" target="_blank") 
                    img(src=`${pathImage}${imgHero}`, style="max-width: 600px; height: auto; display: block;", width="100%", height="auto", alt=`${imgHeroBannerAlt}`)

mixin HERO_ONLY(imgHero, imgHeroAlt)
    table(border="0" cellpadding="0" cellspacing="0" width="100%" role="presentation" style="max-width: 600px; mso-table-lspace: 0; mso-table-rspace: 0;")
        tr  
            td(width="24")
            td(style="font-size: 0.001px; line-height: 1; mso-line-height-alt: 1%;")
                img(src=`${pathImage}${imgHero}`, alt=`${imgHeroAlt}` width="100%" style="display: block; max-width: 552px; height: auto;")
            td(width="24")
        tr: td(height="24")

mixin MARGIN(height)
    table(border="0", cellpadding="0", cellspacing="0", role="presentation" width="600", style="mso-table-lspace: 0; mso-table-rspace: 0;")
        tr: td(height=`${height}`)