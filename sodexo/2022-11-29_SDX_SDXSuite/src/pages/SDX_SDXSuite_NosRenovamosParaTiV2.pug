extends ../template/main
append variables 
    - pathImage = 'https://blog.sodexo.com.mx/hubfs/sdx-suite-nov/'
block content
    
    +HERO_BANNER(
        'nos-renovamos-para-ti.png',
        'Sodexo'
    )
    
    +CONTENT(
        '<br>En Sodexo estamos llevando a cabo una <strong>transformación digital</strong> en nuestros procesos, es por eso por lo que, estaremos migràndonos del sistema Vive Sodexo a nuestra nueva plataforma Sodexo Suite, para seguir ofreciéndote experiencias excepcionales que hagan tus procesos de compra ¡mucho + ágiles, seguros y eficientes!<br><br><img src="https://blog.sodexo.com.mx/hubfs/sdx-suite-nov/sodexo-suite.png" alt="Sodexo suite" width="100%" style="max-width: 280px;"><br><br><strong style="color: #ff0000; font-size: 19px;">¡Así de fácil tendrás acceso a todos tus servicios!</strong><br><br>'
    )

    -
        const ITEMS = [
            {
                item: 'ingreso-plataforma.png',
                url: 'https://youtu.be/7Wib5BefDaw',
            },
            {
                item: 'dashboard.png',
                url: 'https://youtu.be/3r0yzM1r5bc',
            },
            {
                item: 'tarjetas.png',
                url: 'https://youtu.be/FmGg3gBTRsY',
            },
            {
                item: 'fondos.png',
                url: 'https://youtu.be/sgU4T0Me61M',
            },
            {
                item: 'chat.png',
                url: 'https://youtu.be/nmG8Sjw8eXQ',
            },
            {
                item: 'reportes.png',
                url: 'https://youtu.be/pdrCf1PGr5Q',
            },
        ]
    
    table(border="0", cellpadding="0", cellspacing="0", width="100%" role="presentation" style="max-width: 600px; mso-table-lspace: 0; mso-table-rspace: 0;")
        tr
            each item, key in ITEMS
                if key <= 2
                    td(align="center" style="font-family: arial, helvetica, sans-serif; line-height: 1.2; mso-line-height-alt: 120%;")
                        a(href=`${item.url}` rel="noopener" target="_blank") 
                            img(src=`${pathImage}${item.item}` alt="Icono" width="100%" style="max-width: 200px;")
        tr
            each item, key in ITEMS
                if key > 2
                    td(align="center" style="font-family: arial, helvetica, sans-serif; line-height: 1.2; mso-line-height-alt: 120%;")
                        a(href=`${item.url}` rel="noopener" target="_blank") 
                            img(src=`${pathImage}${item.item}` alt="Icono" width="100%" style="max-width: 200px;")
    
    +HERO_BANNER(
        'footer-sodexo.png',
        'Sodexo'
    )