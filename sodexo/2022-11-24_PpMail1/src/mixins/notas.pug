mixin CONTENT(text)
    table(border="0" cellpadding="0" cellspacing="0" width="100%" role="presentation" style="max-width: 600px; mso-table-lspace: 0; mso-table-rspace: 0;")
        tr 
            td(width="6%")
            td(align="center" style="font-family: arial, helvetica, sans-serif; line-height: 1; mso-line-height-alt: 1%;")
                span(style="color: #000000; font-size: 100%;") !{`${text}`}
            td(width="6%")

