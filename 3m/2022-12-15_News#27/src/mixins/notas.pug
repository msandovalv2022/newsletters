mixin TWO_COLS(imgLeft, imgLeftAlt, imgRight, imgRightAlt, imgRightUrl)
    table(border="0" cellpadding="0" cellspacing="0" width="960" style="mso-table-lspace: 0; mso-table-rspace: 0;")
        tr
            td
                img(src=`${imgLeft}` style="width: 616px;" width="616" alt=`${imgLeftAlt}`)
            td
                a(href=`${imgRightUrl}` rel="noopener" target="_blank") 
                    img(src=`${imgRight}` style="width: 344px;" width="344" alt=`${imgRightAlt}`)

mixin THREE_COLS(urlUno, urlDos, urlTres, imgUno, imgDos, imgTres, imgUnoAlt, imgDosAlt, imgTresAlt)
    table(border="0" cellpadding="0" cellspacing="0" width="960" style="mso-table-lspace: 0; mso-table-rspace: 0;")
        tr
            td
                a(href=`${urlUno}` rel="noopener" target="_blank") 
                    img(src=`${imgUno}` style="width: 325px;" width="325" alt=`${imgUnoAlt}`)
            td
                a(href=`${urlDos}` rel="noopener" target="_blank") 
                    img(src=`${imgDos}` style="width: 311px;" width="311" alt=`${imgRightAlt}`)
            td
                a(href=`${urlTres}` rel="noopener" target="_blank") 
                    img(src=`${imgTres}` style="width: 324px;" width="324" alt=`${imgTresAlt}`)