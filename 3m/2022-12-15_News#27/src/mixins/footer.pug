mixin FOOTER(text)
    table(border="0" cellpadding="0" cellspacing="0" width="800" style="mso-table-lspace: 0; mso-table-rspace: 0;")
        tr
            td(width="20")
            td(align="right" width="760" style="font-family: '3M circular TT', helvetica, arial, sans-serif; line-height: 1; mso-line-height-alt: 100%;")
                table(border="0" cellpadding="0" cellspacing="0" width="auto" style="mso-table-lspace: 0; mso-table-rspace: 0;")
                    tr
                        td(style="font-family: '3M circular TT', helvetica, arial, sans-serif; line-height: 1; mso-line-height-alt: 100%;")
                            span(style=`font-size: 13px; color: #000000;`) !{`${text}`}
            td(width="20")