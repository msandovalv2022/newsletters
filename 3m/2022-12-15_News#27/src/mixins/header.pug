mixin HEADER(imgTitle, imgTitleAlt, textFecha)
    table(border="0" cellpadding="0" cellspacing="0" width="976" style="mso-table-lspace: 0; mso-table-rspace: 0;")
        tr: td(height="40", colspan="3")
        tr  
            td(width="48")
            td
                table(border="0", cellpadding="0", cellspacing="0", width="504", role="presentation" style="mso-table-lspace: 0; mso-table-rspace: 0;")
                    tr
                        td(align="left" valign="bottom")
                            a(href=`${imgWpUrl}`, rel="noopener", target="_blank") 
                                img(src=`${pathImageHeadFoo}${logo}`, alt=`${imgWpAlt}`, width="120.5", height="auto", style="width: 120.5px; height: auto;")
                        td(align="right" valign="bottom" style="font-family: helvetica, arial, sans-serif; line-height: 1; mso-line-height-alt: 1%;")
                            span(style=`font-size: 13px; color: #000000`) !{`${textFecha}`}
                    tr: td(height="48") 
                    tr: td(align="center", colspan="2") 
                        img(src=`${pathImageHeadFoo}${imgTitle}`, alt=`${imgTitleAlt}`, width="100%", height="auto", style="max-width: 440.5px; height: auto;")
            td(width="48")
        tr: td(height="40", colspan="3")

