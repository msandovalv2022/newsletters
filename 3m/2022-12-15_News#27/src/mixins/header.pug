                            span(style=`font-size: 13px; color: #000000`) !{`${textFecha}`}
                    tr: td(height="48") 
                    tr: td(align="center", colspan="2") 
                        img(src=`${pathImage}${imgTitle}`, alt=`${imgTitleAlt}`, width="440.5", height="auto", style="width: 440.5px; height: auto;")
            td(width="48")
