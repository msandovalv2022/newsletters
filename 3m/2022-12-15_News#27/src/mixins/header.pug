        tr: td(height="40", colspan="3")
        tr  
            td(width="48")
            td(width="504")
                table(border="0", cellpadding="0", cellspacing="0", width="504", role="presentation" style="mso-table-lspace: 0; mso-table-rspace: 0;")
                    tr
